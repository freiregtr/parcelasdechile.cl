- var fonts = "//fonts.googleapis.com/css?family=Poppins:400,700,300,400italic"
- var html_class = "wide smoothscroll wow-animation"

include _mixins

block variables

doctype html

html(lang="en" class="#{html_class}")
	head
		// Site Title
		block title
			title Home

		meta(name="format-detection" content="telephone=no")
		meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(charset='utf-8')

		link(rel="icon" href="images/favicon.ico" type="image/x-icon")

		// Stylesheets
		link(rel="stylesheet" type="text/css" href="#{fonts}")
		link(rel="stylesheet" href="css/style.css")

		= "\n\t\t"
		<!--[if lt IE 10]>
		div(style='background: #212121; padding: 10px 0; box-shadow: 3px 3px 5px 0 rgba(0,0,0,.3); clear: both; text-align:center; position: relative; z-index:1;')
			a(href="http://windows.microsoft.com/en-US/internet-explorer/")
				img(src="images/ie8-panel/warning_bar_0000_us.jpg" border="0" height="42" width="820" alt="You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today.")
		script(src="js/html5shiv.min.js")
		= "\n\t\t"
		<![endif]-->
	body
		// Page
		div(class="page text-center")
			block page

			// Modal
			#loginModal.modal.fade(role='dialog')
				.modal-dialog
					// Modal content
					.modal-content
						.modal-body
							button.close.mdi.mdi-window-close(type='button', data-dismiss='modal')

							// Nav tabs
							ul.nav.nav-tabs.nav-tabs-custom(role='tablist')
								li.active(role='presentation')
									a(href='#login', aria-controls='login', role='tab', data-toggle='tab') Login
								li(role='presentation')
									a(href='#register', aria-controls='register', role='tab', data-toggle='tab') Register
							// Tab panes
							.tab-content.offset-top-20
								.fade.in#login.tab-pane.active(role='tabpanel')
									form.offset-top-40.rd-mailform.text-left(method='post')
										.form-group
											label.form-label(for="login-name") User name
											input#login-name.form-control(type="text" name="name" data-constraints='@Required')
										.form-group.offset-top-7
											label.form-label(for="login-password") Password
											input#login-password.form-control(type="password" name="password" data-constraints="@Required")
										.offset-top-20.text-center.text-sm-left
											button(type="submit").btn.btn-block.btn-primary login

								.fade.in#register.tab-pane(role='tabpanel')
									form.offset-top-40.rd-mailform.text-left(method='post')
										.form-group
											label.form-label(for="register-name") User name
											input#register-name.form-control(type="text" name="name" data-constraints='@Required')
										.form-group.offset-top-7
											label.form-label(for="register-email") Email
											input#register-email.form-control(type="email" name="email" data-constraints="@Email @Required")
										.offset-top-20.text-center.text-sm-left
											button(type="submit").btn.btn-block.btn-primary register

			#registerModal.modal.fade(role='dialog')
				.modal-dialog
					// Modal content
					.modal-content
						.modal-body
							button.close.mdi.mdi-window-close(type='button', data-dismiss='modal')

							// Nav tabs
							ul.nav.nav-tabs.nav-tabs-custom(role='tablist')
								li(role='presentation')
									a(href='#login-2', aria-controls='login', role='tab', data-toggle='tab') Login
								li.active(role='presentation')
									a(href='#register-2', aria-controls='register', role='tab', data-toggle='tab') Register
							// Tab panes
							.tab-content.offset-top-20
								.fade.in#login-2.tab-pane(role='tabpanel')
									form.offset-top-40.rd-mailform.text-left(method='post')
										.form-group
											label.form-label(for="login-name-2") User name
											input#login-name-2.form-control(type="text" name="name" data-constraints='@Required')
										.form-group.offset-top-7
											label.form-label(for="login-password-2") Password
											input#login-password-2.form-control(type="password" name="password" data-constraints="@Required")
										.offset-top-20.text-center.text-sm-left
											button(type="submit").btn.btn-block.btn-primary login

								.fade.in#register-2.tab-pane.active(role='tabpanel')
									form.offset-top-40.rd-mailform.text-left(method='post')
										.form-group
											label.form-label(for="register-name-2") User name
											input#register-name-2.form-control(type="text" name="name" data-constraints='@Required')
										.form-group.offset-top-7
											label.form-label(for="register-email-2") Email
											input#register-email-2.form-control(type="email" name="email" data-constraints="@Email @Required")
										.offset-top-20.text-center.text-sm-left
											button(type="submit").btn.btn-block.btn-primary register

		// Global Mailform Output
		#form-output-global.snackbars

		// PhotoSwipe Gallery
		.pswp(tabindex="-1" role="dialog" aria-hidden="true")
			.pswp__bg
			.pswp__scroll-wrap
				.pswp__container
					.pswp__item
					.pswp__item
					.pswp__item
				.pswp__ui.pswp__ui--hidden
					.pswp__top-bar
						.pswp__counter

						button.pswp__button.pswp__button--close(title="Close (Esc)")
						button.pswp__button.pswp__button--share(title="Share")
						button.pswp__button.pswp__button--fs(title="Toggle fullscreen")
						button.pswp__button.pswp__button--zoom(title="Zoom in/out")
						.pswp__preloader
							.pswp__preloader__icn
								.pswp__preloader__cut
									.pswp__preloader__donut
					.pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
						.pswp__share-tooltip

					button.pswp__button.pswp__button--arrow--left(title="Previous (arrow left)")

					button.pswp__button.pswp__button--arrow--right(title="Next (arrow right)")
					.pswp__caption
						.pswp__caption__cent

		// Java script
		script(src="js/core.min.js")
		script(src="js/script.js")

		block coder