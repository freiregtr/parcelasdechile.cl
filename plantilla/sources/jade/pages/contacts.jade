extends  ../_skeleton

block variables
	- var activeIndex = 3

block title
	title Contacts

block page
	include ../mixins/_breadcrumbs

	// Page Header
	header.page-header
		include ../sections/_navigation-default

	// Page Content
	main.page-content
		+breadcrumbs({
			0: {
				"title": "Home",
				"href": "./"
			},
			1: {
				"title": "Contacts"
			}
		})

		section.section-top-70.section-bottom-80
			.shell.text-md-left
				.range
					.cell-md-8
						h3 Contacts
						p.offset-top-32.lead Get in touch with us regarding your real estate search or adding your property to one of our listings!
						p.offset-top-16 Usually, we reply within 1 business dayâ€¦

						hr

						h3 Ask a Question

						// RD Mailform
						form.offset-top-40.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
							.range.range-xs-middle
								.cell-lg-2
									p.text-base Your name*
								.cell-lg-10.offset-top-7.offset-lg-top-0
									.form-group
										label.form-label(for="contact-name") Enter name
										input#contact-name.form-control(type="text" name="name" data-constraints='@Required')
							.range.range-xs-middle.offset-top-20
								.cell-lg-2
									p.text-base Your e-mail*
								.cell-lg-10.offset-top-7.offset-lg-top-0
									.form-group
										label.form-label(for="contact-email") Enter e-mail
										input#contact-email.form-control(type="email" name="email" data-constraints="@Email @Required")

							.range.range-xs-middle.offset-top-20
								.cell-lg-2
									p.text-base Your phone*
								.cell-lg-10.offset-top-7.offset-lg-top-0
									.form-group
										label.form-label(for="contact-phone") Enter phone
										input#contact-phone.form-control(type="text" name="phone" data-constraints="@Numeric @Required")
							.range.offset-top-20
								.cell-lg-2.text-lg-nowrap
									p.text-base Your message*
								.cell-lg-10.offset-top-7.offset-lg-top-0
									.form-group
										label.form-label(for="contact-message") What can we help you with?
										textarea#contact-message.form-control(name="message" data-constraints="@Required")
							.range.offset-top-20.text-center.text-sm-left
								.cell-lg-5.cell-lg-preffix-2
									button(type="submit").btn.btn-primary Send


					.cell-md-4
						.well.well-rudo
							h3 Search for properties:
							form.offset-top-30.text-left(method='post')
								.form-group
									label.form-label-static.form-label-outside Keyword
									input.form-control(type="text" name="keyword" placeholder='Any' data-constraints="@Required")

								.form-group
									label.form-label-static.form-label-outside Property status
									//Select 2
									select.form-control.select-filter(data-placeholder="Select an option", data-minimum-results-for-search="Infinity", data-constraints="@Required")
										option(value="2") Any
										option(value="3") Rent
										option(value="4") Sale
								.form-group
									label.form-label-static.form-label-outside Property type
									//Select 2
									select.form-control.select-filter(data-placeholder="Select an option", data-minimum-results-for-search="Infinity", data-constraints="@Required")
										option(value="2") Any
										option(value="3") Building
										option(value="4") Office

								.form-group
									label.form-label-static.form-label-outside Location
									input.form-control(type="text" name="location" placeholder='Any' data-constraints="@Required")

								#goal.well-toggle.offset-top-10
									label.form-label-static.form-label-outside Price
									.range-sm.range.offset-top-0
										.cell-xs-6
											input.form-control(type="number" data-zeros="true" min="1" value="1")
										.cell-xs-6.offset-top-10.offset-xs-top-0
											input.form-control(type="number" data-zeros="true" min="1" value="1")

									.offset-top-10
										label.form-label-static.form-label-outside Bedrooms
										.range-sm.range.offset-top-0
											.cell-xs-6
												input.form-control(type="number" data-zeros="true" min="1" value="1")
											.cell-xs-6.offset-top-10.offset-xs-top-0
												input.form-control(type="number" data-zeros="true" min="1" value="1")

									.offset-top-10
										label.form-label-static.form-label-outside Bathrooms
										.range-sm.range.offset-top-0
											.cell-xs-6
												input.form-control(type="number" data-zeros="true" min="1" value="1")
											.cell-xs-6.offset-top-10.offset-xs-top-0
												input.form-control(type="number" data-zeros="true" min="1" value="1")

									.offset-top-10
										label.form-label-static.form-label-outside Area
										.range-sm.range.offset-top-0
											.cell-xs-6
												input.form-control(type="number" data-zeros="true" min="1" value="1")
											.cell-xs-6.offset-top-10.offset-xs-top-0
												input.form-control(type="number" data-zeros="true" min="1" value="1")

									.offset-top-10
										label.form-label-static.form-label-outside Parking spots
										.range-sm.range.offset-top-0
											.cell-xs-6
												input.form-control(type="number" data-zeros="true" min='0' value="0")
											.cell-xs-6.offset-top-10.offset-xs-top-0
												input.form-control(type="number" data-zeros="true" min="1" value="1")

								.offset-top-10
									button.btn.btn-block.btn-primary(data-custom-toggle='#goal') more

								.offset-top-10
									button.btn.btn-block.btn-primary search


	// Page Footer
	include ../sections/_footer-default



