//- Bootstrap Pagination
//- size - pagination sizing class
//- active - active index of pagination
//- index - an array of {link} for indexes

mixin pagination-bootstrap(size, active, indexes)
	// Bootstrap Pagination
	nav
		ul.pagination(class=size)
			//- Indexes
			if (indexes.length)
				each index, i in indexes
					if (i === (active - 1))
						li.active
							span= i + 1
					else
						li
							a(href=index)= i + 1
			else
				- for (var i = 1; i <= indexes; i++){
				if (i === active)
					li.active
						span= i
				else
					li
						a(href="#")= i
				-}
			//- Next
			if (indexes.length === active || indexes === active)
				li.disabled
					span(aria-label="Next")
						span(aria-hidden='true') Next
			else
				li
					a(href="#", aria-label="Next").btn
						span(aria-hidden='true') Next